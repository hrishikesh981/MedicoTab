<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slideimage"
        android:layout_width="262dp"
        android:layout_height="177dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/medicine_final" />

    <TextView
        android:id="@+id/slidedesc"
        android:layout_width="281dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/slideheading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Your one stop solution to buying medicines online."

        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/slideheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slideimage"
        android:fontFamily="sans-serif-smallcaps"
        android:text="WELCOME"
        android:textAlignment="center"

        android:textColor="@color/DarkGrey"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>